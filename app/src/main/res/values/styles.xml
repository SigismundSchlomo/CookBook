<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CredentialInputViewStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>

    </style>

    <style name="RecipeBody" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="android:textSize">@dimen/recipe_body_text_size</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="RecipeHeader" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="IngredientListLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:hint">@string/ingredients_list_label</item>
        <item name="android:textColorHint">@android:color/black</item>

    </style>

    <style name="StepsListLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:hint">@string/steps_list_label</item>
        <item name="android:textColorHint">@android:color/black</item>

    </style>

</resources>